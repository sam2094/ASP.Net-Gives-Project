@model IEnumerable<Gives.Models.Causes_Single_Recent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<h2>Causes Single Content</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Second_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Progress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Donors)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Days)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content3)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Uploads/@item.Image" class="img-circle">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.First_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Second_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Progress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Donors)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Days)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content3)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
        </td>
    </tr>
}

</table>
