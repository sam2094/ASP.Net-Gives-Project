@model Gives.Models.About_Section

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}

<h2>Edit</h2>

<form method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <div class="form-responce">
        <h4>About Content</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                <img style="width:200px;height:100px;" src="~/Uploads/@Model.Image" class="img-circle headerImg" />
            </div>
            <div class="col-md-8">
                <input type="file" name="Image" class="form-control" />
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-10">
                First Text
                <textarea style="height:150px; margin-bottom:20px" type="text" name="Text_First" class="form-control">@Model.Text_First</textarea>
                @Html.ValidationMessageFor(model => model.Text_First, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Second Text
                <textarea style="height:150px; margin-bottom:20px" type="text" name="Text_Second" class="form-control">@Model.Text_Second</textarea>
                @Html.ValidationMessageFor(model => model.Text_Second, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Information
                <textarea style="height:150px; margin-bottom:20px" type="text" name="Information" class="form-control">@Model.Information</textarea>
                @Html.ValidationMessageFor(model => model.Information, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    @if (ViewBag.EditError != null)
    {
        <h3 class="edit-error">@ViewBag.EditError</h3>
    }
</form>

<div class="return-back">
    <h3>@Html.ActionLink("Back to List", "Index")</h3>
</div>


