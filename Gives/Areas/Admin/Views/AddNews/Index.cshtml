@using Gives.Models


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}
<a style="font-weight:700;font-size:20px;margin-bottom:30px" href="@Url.Action("Create","AddNews")">Create News</a>


<!--Table-->
    <table class="table col-xs-6">
        <!--Table head-->
        <thead class="blue-grey lighten-4">
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>States</th>
                <th>Date</th>
                <th>Image</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (News nw in ViewBag.News)
            {
                <tr>
                    <td>@nw.Title</td>
                    <td>@nw.Content</td>
                    <td>@nw.States</td>
                    <td>@Convert.ToDateTime(nw.Dates).ToString("dd MMMM yyyy")</td>
                    <td><img style="min-width:400px;max-width:400px;min-height:250px;max-height:250px" src="~/Uploads/@nw.Image" class="img-circle"></td>
                    <td><a style="font-weight:500;font-size:17px" href="@Url.Action("Edit", "AddNews", new { id=nw.Id })">Edit</a></td>
                    <td><a style="font-weight:500;font-size:17px" href="@Url.Action("Delete", "AddNews", new { id=nw.Id })">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
