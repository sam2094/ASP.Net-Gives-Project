@model Gives.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Admin.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-responce">
    <h4> Create Category</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div style="padding-top:10px" class="col-md-offset-2 col-md-10">
            <input style="margin-bottom:30px" type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    @if (ViewBag.EditError != null)
    {
        <h3 class="edit-error">@ViewBag.EditError</h3>
    }
    <div style="margin-top:20px" class="return-back">
        <h3>@Html.ActionLink("Back to List", "Index")</h3>
    </div>
</div>
}

    
