
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V14</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Areas/Admin/Public/login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Public/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Public/login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Public/login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Public/login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Public/login/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Public/login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Public/login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Public/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Public/login/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                <form class="login100-form validate-form flex-sb flex-w" method="post" enctype="multipart/form-data">
                    <span class="login100-form-title p-b-32">
                        Register
                    </span>

                    <span class="txt1 p-b-11">
                        Name
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Name is required">
                        <input class="input100" type="text" name="Name">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Surname
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Surname is required">
                        <input class="input100" type="text" name="Surname">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Email
                    </span>
                    <div class="wrap-input100 validate-input m-b-36" data-validate="Email is required">
                        <input class="input100" type="email" name="Email">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Password
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        <input class="input100" type="password" name="Password">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Confirm Password
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Confirm Password is required">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        <input class="input100" type="password" name="ConfirmPassword">
                        <span class="focus-input100"></span>
                    </div>

                    <span class="txt1 p-b-11">
                        Image
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Image is required">
                        <span class="btn-show-pass">
                        </span>
                        <input class=" input100" type="file" name="Image" style="height:27px; padding:0px" >
                        <span class="focus-input100"></span>
                    </div>
                    <div class="container-login100-form-btn" style="margin-top:25px">
                        <button class="login100-form-btn">
                            Register
                        </button>
                    </div>
                </form>
                <br />
                <br />
                @if (ViewBag.RegisterError != null)
                {
                    <div class="alert alert-warning" style="height:20px; background-color:transparent;border-color:transparent">
                        <h2>@ViewBag.RegisterError</h2>
                    </div>
                }
            </div>
        </div>
    </div>

    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Public/login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Public/login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Public/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Areas/Admin/Public/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Public/login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Public/login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Areas/Admin/Public/login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Public/login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Public/login/js/main.js"></script>

</body>
</html>

